@page "/weather"

<PageTitle>Weather</PageTitle>

<MudText Typo="Typo.h1">Weather</MudText>

<MudText Typo="Typo.body1">This component demonstrates showing data.</MudText>

<MudDataGrid Items="forecasts" >
    <Columns>
        <PropertyColumn Property="x => x.Date" Title="@(nameof(WeatherResponse.Date))" />
        <PropertyColumn Property="x => x.Summary" Title="@(nameof(WeatherResponse.Summary))" />
        <PropertyColumn Property="x => x.TemperatureC" Title="@(nameof(WeatherResponse.TemperatureC))" />
        <PropertyColumn Property="x => x.TemperatureF" Title="@(nameof(WeatherResponse.TemperatureF))" />
    </Columns>
</MudDataGrid>

@code {
    @inject IWeatherService WeatherService
    private IEnumerable<WeatherResponse> forecasts = [];

    protected override async Task OnInitializedAsync()
    {
        forecasts = await WeatherService.GetWeatherForecastsAsync();
    }

}
